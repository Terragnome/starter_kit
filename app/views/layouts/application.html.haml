!!! html
%html
  %head
    %title
      =@app_title
    =stylesheet_link_tag    "_colors", media:"all", "data-turbolinks-track"=>true
    =stylesheet_link_tag    "application", media:"all", "data-turbolinks-track"=>true
    =javascript_include_tag "application", "data-turbolinks-track"=>true
    =csrf_meta_tags
    %meta{:name=>'viewport', :content=>'width=device-width, initial-scale=1.0'}
  %body{:onscroll=>"Application.UpdateHeaderBar(225);"}
    #popups
    #blocker
    #fb-root
    =render :partial=>'layouts/header_bar'
    =render :partial=>'layouts/header', :object=>@app_title_components
    #scene{:style=>"overflow:#{is_mobile_device? ? 'visible' : 'scroll'};"}
      #scene_content
        #scene_body
          =yield
        =render :partial=>'layouts/ads'
        =render :partial=>'layouts/footer'
    =render :partial=>'layouts/analytics'