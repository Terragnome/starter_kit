.show
  -if @post
    =render partial:'post', object:@post
    -if @post.previous || @post.next
      .navigation
        -if @post.previous
          =link_to("PREVIOUS", post_url(@post.previous.id, :display_slug=>@post.previous.display_slug), 'data-push'=>true, :id=>'previous_post')
        -if @post.next
          =link_to("NEXT", post_url(@post.next.id, :display_slug=>@post.next.display_slug), 'data-push'=>true, :id=>'next_post')
  -else
    .placeholder
      No content