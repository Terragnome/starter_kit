.post{:id=>"post_#{post.id}"}
  .header
    %h1
      =post.title.upcase
    .info_section
      .info
        .text
          =post.ago.capitalize
  .body
    %p
      =post.body.gsub(/\n/, '<br/>').html_safe
    -if post.tag_list.count>0
      .tags
        .tags_title
          TAGS
        -post.tag_list.each do |tag|
          =link_to("##{tag}", tag_archive_path(tag), :class=>'tag', 'data-push'=>true)
  .actions
    %a.button.share_button
      SHARE
    %a.button.comment_button
      COMMENT
      %fb:comments-count.comment_count{:href=>post_url(post.id, :display_slug=>post.display_slug)}
    -if post.url
      =link_to(post.display_call_to_action, post.url, :class=>['button', 'buy_button'])
  .spacer
    .fb-comments{'data-href'=>post_url(post.id, :display_slug=>post.display_slug), 'data-numposts'=>'5', 'data-colorscheme'=>'light', :style=>'display:none;'}
  .share_container
    =render :partial=>'share', :object=>post
:javascript
  Post.Init();