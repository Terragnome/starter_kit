.post{:id=>"post_#{post.id}"}
  .header
    %h1
      =post.title.upcase
    .info_section
      .info
        .text
          =post.ago.capitalize
  .body
    -post.photos.each do |ph|
      =image_tag(ph.remote_url)
    %p
      =post.body.gsub(/\n/, '<br/>').html_safe
    -if post.tag_list.count>0
      .tags
        .tags_title
          TAGS
        -post.tag_list.each do |tag|
          =link_to("##{tag}", tag_archive_path(tag), :class=>'tag', 'data-push'=>true)
  =render :partial=>'post_actions', :object=>post, :as=>:post
  .share_container
    =render :partial=>'share', :object=>post
:javascript
  Post.Init();